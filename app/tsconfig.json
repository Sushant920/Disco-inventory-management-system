{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@backend/*": ["src/backend/*"],
      "@renderer/*": ["src/renderer/*"]
    },
    "types": ["node"]
  },
  "include": ["src/**/*", "vite.renderer.config.ts"]
}

