{
  "name": "disco-wine-inventory",
  "version": "0.1.0",
  "description": "Disco Wine Shop Inventory Manager (Electron + React + SQLite)",
  "main": "dist/main.js",
  "author": "Disco",
  "license": "MIT",
  "engines": {
    "node": ">=20.19 <21"
  },
  "scripts": {
    "dev": "concurrently -k \"npm:dev:main\" \"npm:dev:preload\" \"npm:dev:renderer\" \"npm:start\"",
    "dev:main": "esbuild src/main/index.ts --bundle --platform=node --external:electron --outfile=dist/main.js --define:process.env.NODE_ENV=\\\"\\\" --watch",
    "dev:preload": "esbuild src/preload/index.ts --bundle --platform=node --external:electron --outfile=dist/preload.js --define:process.env.NODE_ENV=\\\"\\\" --watch",
    "dev:renderer": "vite dev --config vite.renderer.config.mjs --host",
    "start": "wait-on dist/main.js dist/preload.js http://localhost:5173 && electron .",
    "build": "npm run build:clean && npm run build:main && npm run build:preload && npm run build:renderer",
    "build:clean": "rimraf dist renderer-dist",
    "build:main": "esbuild src/main/index.ts --bundle --platform=node --external:electron --outfile=dist/main.js --define:process.env.NODE_ENV=\\\"production\\\"",
    "build:preload": "esbuild src/preload/index.ts --bundle --platform=node --external:electron --outfile=dist/preload.js --define:process.env.NODE_ENV=\\\"production\\\"",
    "build:renderer": "vite build --config vite.renderer.config.mjs",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "sql.js": "^1.11.0",
    "date-fns": "^3.6.0",
    "electron-is-dev": "^3.0.1",
    "jspdf": "^2.5.1",
    "papaparse": "^5.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.0.2",
    "zustand": "^4.5.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.5.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.0.1",
    "concurrently": "^9.1.0",
    "electron": "^31.2.0",
    "esbuild": "^0.23.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "wait-on": "^8.0.2"
  }
}

